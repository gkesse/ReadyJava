<project default="run">
    <!-- ============================================ -->
    <target name="clean">
        <delete dir="build"/>
        <delete dir="bin"/>
    </target>
    <!-- ============================================ -->
    <target name="compile" depends="clean">
        <mkdir dir="build"/>
        <javac srcdir="../src" destdir="build"/>
    </target>
    <!-- ============================================ -->
    <target name="jar" depends="compile">
        <mkdir dir="bin"/>
        <jar destfile="bin/GProject.jar" basedir="build">
            <manifest>
                <attribute name="Main-Class" value="GMain"/>
            </manifest>
        </jar>
    </target>
    <!-- ============================================ -->
    <target name="run" depends="jar">
        <echo message="--------------------------------------------------" />
        <java jar="bin/GProject.jar" fork="true"/>
        <echo message="--------------------------------------------------" />
    </target>
    <!-- ============================================ -->
</project>